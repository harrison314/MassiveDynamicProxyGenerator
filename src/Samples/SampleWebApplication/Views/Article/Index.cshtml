@model SampleWebApplication.Models.Article.IndexViewModel
@using SampleWebApplication.Models.Article

@{
    ViewBag.Title = "Article list";
}

<div class="row">
    <div class="col-lg-10 col-md-10 col-sm-10 col-lg-offset-1 col-md-offset-1 col-sm-offset-1">
        <h2>@ViewBag.Title</h2>
    </div>
</div>
<div class="row">
    <div class="col-lg-10 col-md-10 col-sm-10 col-lg-offset-1 col-md-offset-1 col-sm-offset-1">
        <ul class="">
            @foreach(MenuItemViewModel menuItem in Model.MenuItems)
            {
                <li>
                    <a href="@Url.Action("Content", "Article", new { id = menuItem.Id })">
                        @menuItem.Title
                    </a>
                </li>
            }
        </ul>
    </div>
</div>